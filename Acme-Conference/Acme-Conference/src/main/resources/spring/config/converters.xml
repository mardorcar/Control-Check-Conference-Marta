<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd		
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd		
	">

	<util:list id="converters">
		<!-- 
			Add your own converters using entries of the following form: 
			<bean class="converters.Class1ToClass2" /> 
		-->
		<bean class="converters.ActorToStringConverter" />
		<bean class="converters.AdministratorToStringConverter" />
		<bean class="converters.AuthorToStringConverter" />
		<bean class="converters.CategoryToStringConverter" />
		<bean class="converters.ReviewerToStringConverter" />
		<bean class="converters.SponsorToStringConverter" />
		<bean class="converters.ConferenceToStringConverter" />
		<bean class="converters.RegistrationToStringConverter" />
		<bean class="converters.PanelToStringConverter" />
		<bean class="converters.CategoryToStringConverter" />
		<bean class="converters.ReportToStringConverter" />
		<bean class="converters.TopicToStringConverter" />
		<bean class="converters.SubmissionToStringConverter" />
		
		<bean class="converters.StringToActorConverter" />
		<bean class="converters.StringToAdministratorConverter" />
		<bean class="converters.StringToAuthorConverter" />
		<bean class="converters.StringToActorConverter" />
		<bean class="converters.StringToCategoryConverter" />
		<bean class="converters.StringToSponsorConverter" />
		<bean class="converters.StringToConferenceConverter" />
		<bean class="converters.StringToRegistrationConverter" />
		<bean class="converters.StringToPanelConverter" />
		<bean class="converters.StringToCategoryConverter" />
		<bean class="converters.StringToReportConverter" />
		<bean class="converters.StringToTopicConverter" />
		<bean class="converters.StringToSubmissionConverter" />

	</util:list>
	
</beans>